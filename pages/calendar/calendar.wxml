<!--pages/calendar/calendar.wxml-->

<view class='container'>
    <view class='title'>{{currentYear + '-' + (currentMonth+1)+'-'+(currentDate+1)}}</view>
    <view class='action-wrap'>
        <button bindtap='preMonth'>上一月</button>
        <button bindtap='nextMonth'>下一月</button>
    </view>
    <view class='line-wrap'>
        <view class='item' wx:for="{{weekItems}}" wx:key="item">{{item}}</view>
    </view>
    <view class='line-wrap'>
        <view class='item' wx:for="{{fisrtDay}}" wx:key="item"></view>
        <view bindtap='itemTap' data-key='{{index}}' class='item style{{currentDate!=null&&currentDate==index?1:(selectedDate!=null&&selectedDate==index?2:0)}}' wx:for="{{days}}" wx:key="item">
            <view>{{item.day}}</view>
            <view class='small'>{{item.lunar_day_chinese}}</view>
        </view>
    </view>
</view>