<!--pages/color/color.wxml-->
<view class='wrap'>
    <view wx:for="{{colors}}" wx:key="item" class='item' style="background:rgb({{item.r}}, {{item.g}}, {{item.b}})"></view>
    <view class='color-picker'>
        <view class='bg'></view>
        <view class='light'></view>
        <view class='cover'></view>
    </view>
    <view bindtap='hueHandler' class='color-picker-hue' id='color-picker-hue'>
        <view class='hue-position'></view>
    </view>
    <slider class='slider' max='1530' />

</view>