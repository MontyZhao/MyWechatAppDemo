/* pages/color/color.wxss */

.wrap {
    display: flex;
}

.item {
    margin: 20rpx;
    width: 200rpx;
    height: 200rpx;
    /* background: pink; */
}
.color-picker {
    position: relative;
    margin: 20rpx;
    width: 200rpx;
    height: 200rpx;
}

.color-picker .bg {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: red;
}

.color-picker .cover {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-image: linear-gradient(to top, #000, rgba(204, 154, 129, 0));
}

.color-picker-hue {
    margin: 20rpx;
    border-radius: 10rpx;
    width: 100rpx;
    height: 600rpx;
    background: linear-gradient(to bottom, #ff0000 0%, #ffff00 17%, #00ff00 33%, #00ffff 50%, #0000ff 67%, #ff00ff 83%, #ff0000 100%);
}

