/**index.wxss**/
.main_scroll_view {
  width: 100%;
  height: 100vh;
  background-color: #fafafa;
}
.scroll-view-item {
  float: top;
  width: 100%;
  height: 44px;
  background-color: #fff;
}
.scroll-view-item-line {
    position: absolute;
    left: 20px;
    /*bottom: 0;*/
    right: 0px;
    height: 1px;
    background-color: #DFDFDF;
}

.scroll-view-item-hover {
  background-color: #f0f0f0;
}

.scroll-view-item text {
  height: 100%;
  line-height: 44px;
  padding-left: 25px;
  font-size: 16px;
  color: #333;
}
