.area {
    /* margin: 20px auto 0 auto; */
    position: absolute;
    left: 0;
    top: 0;
    width:300px;
    height: 300px;
    border: 1px solid #ddd;
    display: flex;
}

.item {
    width: 50px;
    height: 50px;
    background: #6A55AC;
    color: white;
    text-align: center;
    line-height: 50px;
    z-index: 0;
}
.item.selected {
    z-index: 100;
    background: #AA00AC;
}

.btn {
    margin-top: 300px;
}